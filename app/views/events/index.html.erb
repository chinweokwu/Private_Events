<p id="notice"><%= notice %></p>

<h1>Events (<%= @future_events.count + @past_events.count %>)</h1>
<h1>All Events</h1>

<% @events.each do |event| %>
        <ul>
          <li><%= event.name %>
          <%= link_to 'Show', event %>
          </li>
          <ul>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<h2>Upcoming events (<%= @future_events.count %>)</h2>
  <tbody>
    <% @future_events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Previous events (<%= @past_events.count %>)</h2>
<table>
  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
         <td><%= link_to 'Show', event %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>